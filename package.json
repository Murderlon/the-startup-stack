{
  "name": "the-startup-stack",
  "private": true,
  "description": "A Lightweight, Feature-Rich, and Production-Ready Remix Stack for your next SaaS application.",
  "repository": "murderlon/the-startup-stack",
  "author": "Merlijn Vos <merlijn@soverin.net> (https://github.com/murderlon)",
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "build": "remix vite:build",
    "db:migrate": "cross-env DB_MIGRATING=true bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:seed": "cross-env DB_SEEDING=true bun run ./db/seed.ts",
    "dev": "remix vite:dev",
    "format": "biome format --write .",
    "format:check": "biome format --error-on-warnings .",
    "lint": "biome lint --write .",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@conform-to/react": "1.1.4",
    "@conform-to/zod": "1.1.3",
    "@epic-web/client-hints": "^1.3.2",
    "@neondatabase/serverless": "^0.9.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@react-email/components": "^0.0.7",
    "@react-email/render": "^0.0.15",
    "@remix-run/express": "^2.9.1",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.1",
    "@remix-run/router": "^1.16.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cookie": "^0.6.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.33.0",
    "helmet": "^7.1.0",
    "i18next": "^23.11.3",
    "i18next-browser-languagedetector": "^8.0.0",
    "intl-parse-accept-language": "^1.0.0",
    "isbot": "^3.8.0",
    "lucide-react": "^0.383.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-email": "^2.1.4",
    "react-i18next": "^14.1.1",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.7.0",
    "remix-auth-totp": "^3.3.0",
    "remix-i18next": "^6.1.0",
    "remix-utils": "^7.6.0",
    "sonner": "^1.4.41",
    "sst": "3.1.38",
    "stripe": "^15.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "ulid": "^2.3.0",
    "ws": "^8.18.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@remix-run/dev": "^2.9.2",
    "@types/cookie": "^0.6.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.24.2",
    "postcss": "^8.4.38",
    "remix-development-tools": "^4.1.6",
    "remix-flat-routes": "^0.6.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "trustedDependencies": ["@biomejs/biome"],
  "engines": {
    "node": ">=18.0.0"
  }
}
